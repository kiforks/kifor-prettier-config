{
	"name": "kifor-prettier-config",
	"description": "prettier shareable config",
	"version": "1.0.4",
	"type": "module",
	"exports": "./.prettierrc.json",
	"files": [
		".prettierrc.json"
	],
	"engines": {
		"node": ">=20.8.1"
	},
	"license": "MIT",
	"author": {
		"name": "Kifor Kostiantyn",
		"email": "kifor.ko@gmail.com"
	},
	"homepage": "https://github.com/kiforks/kifor-prettier-config#readme",
	"bugs": {
		"url": "https://github.com/kiforks/kifor-prettier-config/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kiforks/kifor-prettier-config.git"
	},
	"keywords": [
		"Kifor Kostiantyn",
		"code",
		"quality",
		"style",
		"lint",
		"linter",
		"prettier",
		"validate",
		"code style",
		"strict",
		"check",
		"checker",
		"enforce",
		"hint",
		"code lint",
		"kiforko",
		"kiforks",
		"kskifor",
		"prettier",
		"prettier-config",
		"prettier config",
		"kifor"
	],
	"dependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.2.1",
		"prettier-plugin-organize-attributes": "^1.0.0"
	},
	"peerDependencies": {
		"prettier": "^3.2.5"
	},
	"devDependencies": {
		"@types/lodash": "^4.17.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"lodash": "^4.17.21",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.2.5"
	},
	"scripts": {
		"update": "ncu -u && npm install",
		"format": "npx prettier '**/*.{ts,html,js,json,yml}' --write",
		"format:check": "npx prettier '**/*.{ts,html,js,json,yml}' --check",
		"prepare": "husky install",
		"prerelease": "npm run format:check"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{html,ts,js,json}": [
			"prettier --check"
		]
	}
}
