{
	"name": "kifor-prettier-config",
	"description": "prettier shareable config",
	"version": "1.0.2",
	"type": "module",
	"exports": "./.prettierrc.js",
	"files": [
		".prettierrc.js"
	],
	"engines": {
		"node": ">=20.8.1"
	},
	"license": "MIT",
	"author": {
		"name": "Kifor Kostiantyn",
		"email": "kifor.ko@gmail.com"
	},
	"homepage": "https://github.com/kiforks/kifor-prettier-config#readme",
	"bugs": {
		"url": "https://github.com/kiforks/kifor-prettier-config/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kiforks/kifor-prettier-config.git"
	},
	"keywords": [
		"Kifor Kostiantyn",
		"code",
		"quality",
		"style",
		"lint",
		"linter",
		"prettier",
		"validate",
		"code style",
		"strict",
		"check",
		"checker",
		"enforce",
		"hint",
		"code lint",
		"kiforko",
		"kiforks",
		"kskifor",
		"prettier",
		"prettier-config",
		"prettier config",
		"kifor"
	],
	"dependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.2.1",
		"prettier-plugin-organize-attributes": "^1.0.0"
	},
	"peerDependencies": {
		"prettier": "^3.2.5"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-typescript": "^11.1.6",
		"@types/jest": "^29.5.12",
		"@types/lodash": "^4.17.0",
		"@typescript-eslint/eslint-plugin": "^7.7.0",
		"chokidar-cli": "^3.0.0",
		"eslint": "^8.57.0",
		"eslint-config-kifor": "^1.0.6",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"lodash": "^4.17.21",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.2.5",
		"remark-cli": "^12.0.0",
		"rollup": "^4.14.3",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	},
	"scripts": {
		"update": "ncu -u && npm install",
		"build": "rollup -c && prettier --write .prettierrc.js",
		"watch": "npm run build && chokidar 'src/**/*.ts' --ignore '**/*.spec.ts' -c 'npm run build'",
		"lint": "npx eslint '**/*.{ts,html,js}' --quiet --fix",
		"lint:check": "npx eslint '**/*.{ts,html,js}' --quiet",
		"format": "npx prettier '**/*.{ts,html,js,json,yml}' --write",
		"format:check": "npx prettier '**/*.{ts,html,js,json,yml}' --check",
		"prepare": "husky install",
		"prerelease": "npm run lint:check && npm run format:check && npm run test",
		"test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --no-warnings\" npx jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint"
		],
		"*.{html,ts,js,json}": [
			"prettier --check"
		]
	}
}
